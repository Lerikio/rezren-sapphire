= form_for @port do |f|
  - if @port.errors.any?
    #error_explanation
      %h2= "#{pluralize(@port.errors.count, "error")} prohibited this port from being saved:"
      %ul
        - @port.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :number
    = f.number_field :number
  .actions
    = f.submit 'Save'
