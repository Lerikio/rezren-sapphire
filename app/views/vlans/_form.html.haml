= form_for @vlan do |f|
  - if @vlan.errors.any?
    #error_explanation
      %h2= "#{pluralize(@vlan.errors.count, "error")} prohibited this vlan from being saved:"
      %ul
        - @vlan.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :number
    = f.number_field :number
  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
