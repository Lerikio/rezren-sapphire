%table#generic_dns_entries
  %thead
    %tr
      %th Nom
      %th Type
      %th Retour
      %th 
        = link_to new_generic_dns_entry_path, "data-toggle" => 'modal', "data-target" => '#modal-window', class:"btn btn-inverse", remote: true do
          %i.icon-plus
          Nouvelle entrÃ©e DNS
  %tbody
    -@generic_dns_entries.each do |generic_dns_entry|
      %tr
        %td
          = generic_dns_entry.name
        %td
          = generic_dns_entry.dns_type
        %td
          = generic_dns_entry.return
        %td.actions
          = link_to generic_dns_entry_path(generic_dns_entry), "data-toggle" => 'modal', "data-target" => '#modal-window', class:"btn btn-success", remote: true do
            %i.icon-eye-open.icon-large
            Voir
          = link_to edit_generic_dns_entry_path(generic_dns_entry), "data-toggle" => 'modal', "data-target" => '#modal-window', class:"btn btn-warning", remote: true do
            %i.icon-pencil.icon-large
            Editer
          = link_to generic_dns_entry_path(generic_dns_entry), class:"btn btn-danger remote-delete", :method => :delete do
            %i.icon-trash.icon-large
            Supprimer