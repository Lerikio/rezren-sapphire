= form_for @generic_dns_entry do |f|
  - if @generic_dns_entry.errors.any?
    #error_explanation
      %h2= "#{pluralize(@generic_dns_entry.errors.count, "error")} prohibited this generic_dns_entry from being saved:"
      %ul
        - @generic_dns_entry.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :return
    = f.text_field :return
  .field
    = f.label :external
    = f.check_box :external
  .field
    = f.label :archived
    = f.check_box :archived
  .actions
    = f.submit 'Save'
