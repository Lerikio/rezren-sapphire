.modal-header
	%button.close{ type:"button", 'data-dismiss' => "modal"}
		%i.icon-remove

	%h3 Création d'un switch

	= bootstrap_flash

= simple_form_for @switch, validate: true, remote: true do |f|	

	.modal-body
		= render partial: "form", locals: {f: f}  
	.modal-footer
		= f.submit "Créer", {class: "btn btn-primary"}
