= form_for @switch do |f|
  - if @switch.errors.any?
    #error_explanation
      %h2= "#{pluralize(@switch.errors.count, "error")} prohibited this switch from being saved:"
      %ul
        - @switch.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :community
    = f.text_field :community
  .actions
    = f.submit 'Save'
