= form_for @payment do |f|
  - if @payment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@payment.errors.count, "error")} prohibited this payment from being saved:"
      %ul
        - @payment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :value
    = f.text_field :value
  .field
    = f.label :paid_value
    = f.text_field :paid_value
  .field
    = f.label :mean
    = f.text_field :mean
  .field
    = f.label :comment
    = f.text_area :comment
  .field
    = f.label :archived
    = f.check_box :archived
  .actions
    = f.submit 'Save'
