.controls
	.input-append
		= f.input_field :building, as: :select, class: "label-field short-field", collection: @building_list, id: "buildings-select"
		%span.add-on
			%i.icon-home{rel: "tooltip", title: "Bâtiment", style: "margin-top: 10px"}

	.input-append
		= f.input_field :number, class: "label-field", :placeholder => "Numéro de la chambre"
		%span.add-on
			%i.icon-male{rel: "tooltip", title: "Numéro de la chambre", style: "margin-top: 10px"}