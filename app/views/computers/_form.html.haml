= form_for @computer do |f|
  - if @computer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@computer.errors.count, "error")} prohibited this computer from being saved:"
      %ul
        - @computer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :mac_address
    = f.text_field :mac_address
  .field
    = f.label :adherent_id
    = f.number_field :adherent_id
  .field
    = f.label :alias
    = f.text_field :alias
  .actions
    = f.submit 'Save'
