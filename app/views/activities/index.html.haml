- content_for :title do
	Tableau de bord


%h1 Dernières activités

%table#activities
	%thead
		%tr
			%th Activité
			%th Administrateur
			%th Heure
	%tbody
		-@activities.each do |activity|
			%tr
				%td
					= render_activity activity
				%td
					- if activity.owner
						= link_to activity.owner.display_name, activity.owner
					- else
						\--
				%td
					Il y a
					= time_ago_in_words(activity.created_at)
					[
					= activity.created_at.to_s(:short)
					]

