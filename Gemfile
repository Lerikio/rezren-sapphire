source 'https://rubygems.org'

## Database :
	gem 'sqlite3'

## Gems de base :
	gem 'rails', '3.2.13'
	gem 'rails-i18n'
	    
# Gems used only for assets and not required
# in production environments by default.
	group :assets do
		gem 'sass-rails',   '~> 3.2.3'
		gem 'coffee-rails', '~> 3.2.1'
		gem 'uglifier', '>= 1.0.3'
		# Jquery & CSS
			gem 'execjs'
			gem 'jquery-rails'
			gem 'jquery-ui-rails' 
			gem 'jquery-ui-themes'
			gem 'jquery-ui-sass-rails'
		    # Tipsy, pour des info-bulles pratiques
				gem 'tipsy-rails'
			# Tables de données ultra pratiques en JQuery
				gem 'jquery-datatables-rails', github: 'rweng/jquery-datatables-rails'
			# Bootstrap (CSS & JS Twitter)
				gem 'bootstrap-sass'
				gem "font-awesome-rails"
			# Aide pour les "select" des formulaires
				gem 'select2-rails'
	end

# Développement
	group :development do
		# Serveur de développement rails
			gem 'thin'
		# Générateur de documentation
			gem 'annotate', '2.5.0'
		# Impression dans la console via la commande "ap"
			gem 'awesome_print'
		# Renommer l'application en une commande
			gem 'rename' 
			# Usage : rails g rename:app_to Nouveau_Nom
		# Ajout de l'encodage UTF-8 sur tous les fichiers
			gem 'magic_encoding'
	end


# HAML
	gem 'haml-rails'

# Formtastic, pour les formulaires
	gem 'simple_form'

# Validation au niveau du client
	gem 'client_side_validations'
	gem 'client_side_validations-simple_form'
  
# Pagination
	gem 'kaminari'
	gem 'kaminari-bootstrap'

# CanCan : gem d'autorisation
	gem 'cancan'

# Utilisation de bcrypt pour le chiffrage des mots de passe
	gem 'bcrypt-ruby', require: "bcrypt"
  
# Notifications
	gem 'public_activity'

# Machine d'état
	gem 'state_machine'

# Settings, permet de garder en mémoire des valeurs de config
	gem "rails-settings-cached", "0.2.4"

# SNMP, pour l'administration des switchs
	gem 'snmp'

# Permet de générer et manipuler les Zonfile pour le DNS
	gem 'zonefile'

# Turbolinks, pour un chargement plus rapide des pages via JavaScript
	gem 'turbolinks'
	gem 'jquery-turbolinks'

# Bibliothèque d'utilisation de la console en rake
	gem 'highline'
